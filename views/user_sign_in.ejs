<link rel="stylesheet" href="/css/user_sign_in.css">

<section >
<div class="sign-in">
    <div class="home">
        <a href="/">X</a>
    </div>


<form action="/user/create-session" method="POST" class="sign-in-form">
    <input type="text" name="email" placeholder="Enter your email" required>
    <input type="password" name="password" placeholder="Password" required>
    <span class="text">Occupation:&nbsp;</span><select name="userType" id="userType">
        <option value="Employee">Employee</option>
        <option value="Interviewer">Interviewer</option>
        <option value="Student">Student</option>
    </select>
    <input type="submit" value="Login" >
</form>
</div>
<div class="sign-up">
    Don't have an account? <a href="/user/sign-up">Sign up</a>
</div>
</section>
